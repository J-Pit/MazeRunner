<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="border" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mazerunner.gui.Controller">
   <bottom>
      <HBox prefHeight="43.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="up" mnemonicParsing="false" text="up" />
            <Button fx:id="down" mnemonicParsing="false" text="down" />
            <Button fx:id="left" mnemonicParsing="false" text="left" />
            <Button fx:id="right" mnemonicParsing="false" text="right" />
         </children>
      </HBox>
   </bottom>
   <center>
      <GridPane fx:id="grid" hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="difficulty" prefHeight="0.0" prefWidth="100.0" promptText="Difficulty" text="5" />
            <Button fx:id="newGame" mnemonicParsing="false" text="Run" />
            <Button fx:id="load" mnemonicParsing="false" text="Load" />
            <Button fx:id="save" alignment="CENTER" mnemonicParsing="false" text="Save" />
         </children>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="stamina" editable="false" />
            <TextField fx:id="coins" editable="false" />
            <Button fx:id="help" mnemonicParsing="false" text="Help" />
         </children>
      </VBox>
   </right>
</BorderPane>
